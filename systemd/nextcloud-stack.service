[Unit]
Description=Nextcloud stack (rootless podman-compose)
#After=network-online.target appapi-harp.service
#Wants=network-online.target appapi-harp.service
#Requires=appapi-harp.service

[Service]
Type=oneshot
WorkingDirectory=%h/podman-compose/nextcloud

ExecStart=/usr/bin/podman-compose up -d
ExecStop=/usr/bin/podman-compose down

# Have the service appear "active" after ExecStart finishes.
RemainAfterExit=yes

[Install]
WantedBy=default.target

