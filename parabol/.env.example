# Parabol stack-local environment
# Copy to .env and replace placeholders as needed.

# Postgres settings used by the parabol image
POSTGRES_USER=pgparaboladmin
POSTGRES_PASSWORD=replace_with_strong_password
POSTGRES_DB=parabol-saas

# LiteLLM proxy settings
LITELLM_BASE_URL=http://host.containers.internal:4000/v1
LITELLM_API_KEY=replace_with_real_api_key
LITELLM_MODEL=parabol-main
DEBUG_TRIPWIRE=0
ENFORCE_GROUNDING=1
GROUNDING_FORCE_INSUFFICIENT=1
DEBUG_LAST_USER_EXCERPT=1
